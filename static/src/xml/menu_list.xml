  <template >
    <t t-name="Complex.menuDetails">
        <div class="row oe_menu_detail_row">
            <t t-if="thirdMenu">
                <div class="col-4" t-foreach="thirdMenu">
                    <h3>
                        <t t-esc="thirdMenu['name']" />
                    </h3>
                    <t t-if="thirdMenu.children">
                        <ul class="list-group list-group-flush">  
                            <t t-foreach="thirdMenu.children" t-as="fourthMenu">
                                <li class="list-group-item">
                                    <img t-if="fourthMenu['is_collected']" src="/odoo_complex_board/static/src/img/star.png"  alt="收藏"/>
                                    <img t-else="fourthMenu['is_collected']" src="/odoo_complex_board/static/src/img/cancleStar.png"  alt="取消收藏"/>
                                    <t t-esc="fourthMenu['name']"/>
                                </li>
                            </t>
                        </ul>
                    </t>
                </div>
            </t>
        </div>
    </t>
    <t t-name="ComplexMenus">
        <div class='row oe_menu_topBar'>
            <div class="col-6 oe_menu_topBar_title">
                <t t-esc="widget.name"/>
            </div>
            <div class="col-6 oe_menu_topBar_close">
                <a href='#'>
                    <img src="/odoo_complex_board/static/src/img/guanbi.png" alt="close"/>
                </a>
            </div>
        </div>
        <div class='row'>
            <!-- menu -->
             <div class="col-2 oe_menu_list">
                <ul class="nav flex-column" id="oe_first_menu">
                    <li class="nav-item oe_first_menu_item">
                        <div>
                             <img src="/odoo_complex_board/static/src/img/yewu.png" alt="业务" class="oe_menu_item_icon" />
                             所有
                              <img src="/odoo_complex_board/static/src/img/jiantou.png" alt="箭头" class="oe_first_menu_item_toggle collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"/>
                              <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#oe_first_menu">
                                <ul class="nav flex-column oe_second_menu" id="oe_second_menu">
                                    <t t-foreach="widget.menuList" t-as="menuItem">
                                        <li class="nav-item oe_second_menu_item" t-att-itemId="menuItem['id']"  t-att-action="menuItem['action']" t-att-parentId="menuItem['parent_id']" t-att-itemIcon="menuItem['web_icon']">
                                            <t t-esc="menuItem['name']" />
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <!-- / menu -->
            <!-- view -->
            <div class="col-10 oe_menu_detail">
               <t t-call="Complex.menuDetails"/>
            </div>
            <!-- / view -->
        </div>
    </t>
    
  </template>