<?xml version="1.0" encoding="utf-8"?>
<!--
     * Description：view action
     * information.
     * Date: 2019.11.07
     * Updater: wangjuan04@inspur.com
  -->
  <template >
       <t t-name="ComplexBoard.action">
            <t t-log="action"></t>
            <div t-att-data-id="action.attrs.id" class="oe_action">
                <h2 t-attf-class="oe_header #{action.attrs.string ? '' : 'oe_header_empty'}">
                    <span class="oe_header_txt" t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}"> <t t-esc="action.attrs.string"/> </span>
                    <!-- <input class = "oe_header_text" type="text"/> -->
                    <t t-if="!action.attrs.string" t-attr-view="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}">&amp;nbsp;</t>
                    <span class='oe_icon oe_close' t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}"></span>
                    <span class='oe_icon oe_fullScreenTest' t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}">放大</span>
                    <span class='oe_icon oe_fullScreen' t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}"></span>
                    <!-- <span class='oe_icon oe_exitFullScreen'></span> -->
                    <span class='oe_icon oe_minimize oe_fold' t-if="!action.attrs.fold" t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}"></span>
                    <span class='oe_icon oe_maximize oe_fold' t-if="action.attrs.fold" t-attr-viewname="{{action.attrs['string']}}" t-attr-viewid="{{action.attrs['id']}}"></span>
                </h2>
                <div t-att-class="'oe_complex_content' + (!action.attrs.fold ? ' oe_folded' : '')"/>
            </div>
        </t>
  </template>